@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}
<section class="bg-dark px-5 min-vh-100 pt-3">
    <h1 class="text-warning">Hantera ditt konto</h1>

    <div>
        <h2 class="text-warning">Ändra dina kontoinställningar</h2>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <partial name="_ManageNav" />
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @RenderSection("Scripts", required: false)
}
