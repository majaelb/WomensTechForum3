@page
@model WomensTechForum2._0.AdminScaffold.PostAdmin.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Header)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Offensive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].NoOfReports)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].ImageSrc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].SubCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Post) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Header)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Offensive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfReports)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageSrc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubCategory.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
