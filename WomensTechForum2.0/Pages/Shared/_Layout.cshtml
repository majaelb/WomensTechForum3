<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WomensTechForum2._0</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/WomensTechForum2._0.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        @*<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow">*@
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-dark bg-dark box-shadow py-4">
            @*border-bottom mb-3*@
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Women's tech forum</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Start</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Forum">Forum</a>
                        </li>

                        @*<li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Privacy">Datapolicy</a>
                        </li>*@
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0 h-100">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-dark mt-auto py-3">
        @*min-vh-100*@
        <div class="container text-white">
            <div class="text-center  ">

                <h1 class="display-4 m-5">ANMÄL DIG TILL VÅRT NYHETSBREV</h1>

                <input type="text" class="form-control w-50 mx-auto" placeholder="Ange din e-postadress" />
                <input type="checkbox" class="my-3" /><label class="text-white my-3 mx-2 control-label"> Jag samtycker till att motta digital kommunikation enligt de allmänna villkoren.</label>
                <br />
                <button class="btn btn-light rounded-0 px-5 my-4">PRENUMERERA</button>
            </div>
            <hr class="text-light" />
            <div class="d-flex flex-row align-items-center">

                &copy; 2023 &nbsp; WomensTechForum &nbsp;- &nbsp;<a class="text-decoration-none privacy-footer" asp-area="" asp-page="/Privacy">Datapolicy</a>

                <div class="socialmedia-nav">

                    <a class="text-white m-2" href="https://twitter.com/" target="_blank"><i class="bi bi-twitter"></i></a>

                    <a class="text-white m-2" href="https://facebook.com/" target="_blank"><i class="bi bi-facebook"></i></a>

                    <a class="text-white m-2" href="https://instagram.com/" target="_blank"><i class="bi bi-instagram"></i></a>

                    <a class="text-white m-2" href="https://linkedin.com/" target="_blank"><i class="bi bi-linkedin"></i></a>

                </div>
            </div>




        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>